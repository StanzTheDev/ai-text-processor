{
    "manifest_version": 3,
    "name": "Next.js AI Text Processor",
    "version": "1.0",
    "permissions": ["languageDetection", "translation", "storage"],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "/icons/icon-16.png",
        "48": "/icons/icon-48.png",
        "128": "/icons/icon-128.png"
      }
    },
    "icons": {
      "16": "/icons/icon-16.png",
      "48": "/icons/icon-48.png",
      "128": "/icons/icon-128.png"
    }
  }